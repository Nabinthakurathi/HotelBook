<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Enter Name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Checkin"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Check IN"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Checkout"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Check OUT"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Select Your Country"
        android:textSize="20dp"
        android:typeface="monospace" />

    <Spinner
        android:id="@+id/Spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="300dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />

    <TextView
        android:id="@+id/Rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Select Your room"
        android:textSize="20dp"
        android:typeface="monospace" />


    <AutoCompleteTextView
        android:id="@+id/Autocom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Adult"
            android:textSize="20dp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Children"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No of Room"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Adult"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="0"
            android:inputType="number"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Child"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="0"
            android:inputType="number"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Room"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="0"
            android:inputType="number"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btncalc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Calculate"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <!--Output to Calculate total-->

    <TextView
        android:id="@+id/Cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvaddt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/tvnettotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/Roomcost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:inputType="number"
        android:textSize="20dp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/Roomno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:inputType="number"
        android:textSize="20dp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/Totaldays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />


</LinearLayout>